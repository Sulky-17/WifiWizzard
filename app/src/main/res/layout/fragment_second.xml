<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cremaClaro">

    <!-- Otros elementos del layout que ya existan -->

    <EditText
        android:id="@+id/editWifiName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Wifi Name"
        android:inputType="text"
        android:textColorHint="@color/negroClaro" />


    <EditText
        android:id="@+id/editWifiPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editWifiName"
        android:layout_margin="16dp"
        android:hint="Wifi Password"
        android:textColorHint="@color/negroClaro"
        android:inputType="text" />

    <EditText
        android:id="@+id/editWifiDisponibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editWifiPassword"
        android:layout_margin="16dp"
        android:hint="Wifi Disponibility"
        android:textColorHint="@color/negroClaro"
        android:inputType="text" />

    <EditText
        android:id="@+id/editWifiWin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editWifiDisponibility"
        android:layout_margin="16dp"
        android:hint="Url Win"
        android:textColorHint="@color/negroClaro"
        android:inputType="text" />

    <EditText
        android:id="@+id/editWifiImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editWifiWin"
        android:layout_margin="16dp"
        android:hint="Url Image"
        android:textColorHint="@color/negroClaro"
        android:inputType="text" />

    <Button
        android:id="@+id/btnAddWifi"
        style="@style/listButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editWifiImage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Add Wifi" />

    <!-- Otros elementos del layout que ya existan -->

</RelativeLayout>